generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Weapons {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  mod      Int
  attr     String
  equipped Boolean
  knightId String  @db.ObjectId
  knight   Knights @relation(fields: [knightId], references: [id])
}

model Attributes {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  strength     Int
  dexterity    Int
  constitution Int
  intelligence Int
  wisdom       Int
  charisma     Int
  knightId     String    @unique @db.ObjectId
  Knight       Knights[]
}

model Knights {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  nickname     String     @unique
  birthday     String
  weapons      Weapons[]
  attributes   Attributes @relation(fields: [attributesId], references: [id])
  attributesId String     @db.ObjectId
  keyAttribute String
}
